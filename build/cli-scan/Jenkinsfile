
pipeline {
    agent any

    environment {
        ARTEFACT_NAME = "${WORKSPACE}/target/WebGoat-${BUILD_VERSION}.war"
        METADATA_FILE = "${WORKSPACE}/metadata.json"
        IQ_APP_NAME = "webgoat2-cli"
        IQ_URL = "http://localhost:8070"
        IQ_STAGE = "build"
        IQ_CLI = "/opt/nxiq/nexus-iq-cli"
        BUILD_VERSION = 1.2
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -Dproject.version=$BUILD_VERSION -Dmaven.test.failure.ignore clean package'
            }
            post {
                success {
                    echo 'Now archiving...'
                    archiveArtifacts artifacts: "**/target/*.war"
                }
            }
        }

        stage('Nexus IQ Scan'){
            steps {
                sh 'java -jar ${IQ_CLI} -w -i ${IQ_APP_NAME} -s ${IQ_URL} -a admin:admin123 -t ${IQ_STAGE} -m ${METADATA_FILE} ${ARTEFACT_NAME}'
            }
        }        
    }
}

